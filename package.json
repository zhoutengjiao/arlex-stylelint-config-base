{
  "name": "stylelint-config-base",
  "version": "1.0.0",
  "description": "arlex css lint rules",
  "main": "index.js",
  "scripts": {
    "test": "npx eslint --no-eslintrc -c .eslintrc.js ./test",
    "lint": "npx eslint --no-eslintrc -c .eslintrc.js ./",
    "lint:fix": "npx eslint --no-eslintrc -c .eslintrc.js --fix ./"
  },
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "index.js": [
      "prettier --write",
      "npm run lint:fix"
    ],
    "test/**/*.{js}": [
      "prettier --write",
      "npm run lint:fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^6.8.0",
    "lint-staged": "^10.5.1",
    "husky": "^4.3.0"
  },
  "dependencies": {

  }
}
