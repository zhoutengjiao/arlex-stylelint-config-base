{
  "name": "@arlex/stylelint-config-base",
  "version": "1.0.0",
  "description": "arlex css lint rules",
  "main": "index.js",
  "scripts": {
    "test": "npx stylelint --fix ./test",
    "lint": "npx eslint --no-eslintrc -c .eslintrc.js ./**/*.js",
    "lint:fix": "npx eslint --no-eslintrc -c .eslintrc.js --fix ./**/*.js"
  },
  "author": "zhoutengjiao",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "index.js": [
      "prettier --write",
      "npm run lint:fix"
    ],
    "test/**/*.{js}": [
      "prettier --write",
      "npm run lint:fix"
    ]
  },
  "devDependencies": {
    "@arlex/eslint-config-base": "^1.0.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "stylelint": "^13.2.1"
  },
  "dependencies": {
    "stylelint-config-standard": "^20.0.0"
  }
}
